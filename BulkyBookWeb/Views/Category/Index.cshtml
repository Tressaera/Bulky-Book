@* @using BulkyBookWeb.Models;
@model List<Category> *@

@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification"/> 
<div class="container mt-3">
    <div class="row pt-4">
        <div class="col-6">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i>
           &nbsp; Create new Category</a>
        </div>
    </div>
</div>

 <table class="table table-bordered table-light mt-3">
     <tr>
     <th>Adı</th>
     <th>Fiyatı</th>
     <th>Düzenle</th>
     <th>Sil</th>
    </tr>        
    @foreach (var table in Model)
    {
    <tr>
<td>@table.Name</td>
<td>@table.DisplayOrder</td>
<td>
<div class="w-75 btn-group" role="group">
<a asp-controller="Category" asp-action="Edit" asp-route-id="@table.Id" class="btn btn-primary">
<i class="bi bi-pencil-square"></i>
Düzenle
</a>
</div>
</td>
<td>
<div class="w-75 btn-group" role="group">
<a asp-controller="Category" asp-action="Delete" asp-route-id="@table.Id" class="btn btn-danger">
<i class="bi bi-trash-fill"></i>
Sil
</a>
</div>
</td>
   </tr>
    }
</table>   



